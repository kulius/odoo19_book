<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form_note" model="ir.ui.view">
        <field name="name">purchase.order.form.note</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='notes']" position="after">
                <field name="purchase_note" placeholder="Add purchase remarks..."/>
            </xpath>
        </field>
    </record>
</odoo>
