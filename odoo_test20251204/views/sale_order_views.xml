<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_custom_ref" model="ir.ui.view">
        <field name="name">sale.order.form.custom.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page/field[@name='order_line']" position="before">
                <group name="custom_ref_group" string="Additional Information">
                    <field name="custom_ref"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
